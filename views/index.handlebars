<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<h1>Krusty Krab Burger App</h1>
			<img src="assets/img/patty.jpg" alt="Eat-Da-Burger App">
		</div>
	</div>

	<div class="row">
		<div class="devour col-sm-6">

			<br>
			<h2>Krabby Patty Orders Up and Ready!</h2>

			<ul>
				{{#each burgers}} {{#unless this.devoured}}
				<li>
					{{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="btn-primary" type="submit">Eat Me!</button>
					</form>

				</li>
				{{/unless}} {{/each}}
			</ul>

		</div>

		<div class="col-sm-6">

			<h2>Krabby Patties Consumed!</h2>

			{{#each burgers}} {{#if this.devoured}}
			<li>
				{{this.burger_name}}

			</li>
			{{/if}} {{/each}}

		</div>

	</div>
	<!-- end .row -->

	<div class="row">
		<div class="center col-sm-12">

			<h2>Make Me More Krabby Patties!</h2>

			<form class="submit-div create-update-form" action="/" method="POST">

				<div class="form-group">
					<input type="text" id="ca" name="burger_name" id="input-burger">
				</div>

				<button class="btn-primary" type="submit">Submit Burger</button>
			</form>

		</div>

	</div>

</div>